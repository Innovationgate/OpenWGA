#!/bin/sh
# preinst script for openwga
#
# see: dh_installdeb(1)

set -e

echo "preinst $1"

case "$1" in
    install|upgrade)

	echo "check and clean existing tomcat"
	
	TOMCAT_BIN=/var/lib/openwga/tomcat/bin
	if [ -e $TOMCAT_BIN ] ; then
		rm -r $TOMCAT_BIN
	fi
	TOMCAT_LIB=/var/lib/openwga/tomcat/lib
	if [ -e $TOMCAT_LIB ] ; then
		echo "remove $TOMCAT_LIB"
		rm -r $TOMCAT_LIB
	fi

    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


