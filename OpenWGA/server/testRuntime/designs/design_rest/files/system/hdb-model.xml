<hdb-model>
	<storage sid="logs">
		<content contentclass="log">
			<item name="ref"/>
			<item name="message"/>
		</content>
	</storage>
	<storage sid="phones">
		<content contentclass="phone">
		
			<storage sid="editions">
				
				<content contentclass="edition">
					<item name="description"/>
					<item name="price"/>
				</content>
			
			</storage>
			
			<relation name="similarPhone" targetclass="phone"/>

			<item name="id"/>

			<item name="description">
				<custom name="appkit.editor">textarea</custom>
			</item>

			<item name="androidos"/>
			<item name="androidui"/>
		
			<item name="availability">
				<custom name="appkit.editor">textarea</custom>
			</item>
			
			<item name="battery_standbytime"/>
			<item name="battery_talktime"/>
			<item name="battery_type"/>
			
			<item name="camera_features">
				<custom name="appkit.editor">textarea</custom>
			</item>
			
			<item name="camera_primary"/>
			
			<item name="connectivity_bluetooth"/>
			<item name="connectivity_cell"/>
			<item name="connectivity_gps" default="false">
				<custom name="appkit.editor">boolean</custom>
			</item>
			<item name="connectivity_infrared"/>
			<item name="connectivity_wifi"/>
			
			
			<item name="display_screenresolution"/>
			<item name="display_screensize"/>
			<item name="display_touchscreen" default="false">
				<custom name="appkit.editor">boolean</custom>
			</item>
			
			<item name="hardware_accelerometer">
				<custom name="appkit.editor">boolean</custom>
			</item>
			<item name="hardware_audiojack"/>
			<item name="hardware_cpu"/>
			<item name="hardware_fmradio" default="false">
				<custom name="appkit.editor">boolean</custom>
			</item>
			<item name="hardware_physicalkeyboard" default="false">
				<custom name="appkit.editor">boolean</custom>
			</item>
			<item name="hardware_usb"/>
			
			<item name="dimensions"/>
			<item name="weight"/>
			<item name="storage_flash"/>
			<item name="storage_ram"/>
			
			<item name="additionalfeatures"/>
		
		</content>
	</storage>
</hdb-model>


