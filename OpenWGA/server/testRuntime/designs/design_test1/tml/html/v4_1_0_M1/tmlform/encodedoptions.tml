<html>

<head><tml:htmlhead/></head>

<body>
	<PRE>
	Tests the automatic HTML encoding of WebTML Input fields of type "select|checbox|radio". (F0000449A)
	</PRE>
	
	<hr>
	
	<tml:form id="theform" source="none">
	
	
	<p>
	Select: <tml:range var="selectCode" output="true"><tml:input name="select" type="select" options="Sägen,Böhren,Hämmern"/></tml:range>
	</p>
	
	<p>
	Radio: <tml:range var="radioCode" output="true"><tml:input name="radio" type="radio" options="Sägen,Böhren,Hämmern"/></tml:range>
	</p>
	
	<p>
	Select: <tml:range var="checkboxCode" output="true"><tml:input name="checkbox" type="checkbox" options="Sägen,Böhren,Hämmern"/></tml:range>
	</p>
	
	<a name="submit" href="<tml:url action="$refresh"/>">Submit</a>
	
	
	</tml:form>
	
	
	
	<tml:script>
		var cat = "TMLForm";
		
		// Prepare sequence variable to be able to determine the request sequence number
		if (isdefined("seq")) {
			seq++;
		}
		else {
			setSessionVar("seq", 1);
		}
		
		try {
			
			switch (seq) {
			
				case 1:
					assertTrue("HTML-Encoding der Werte: Select", cat, "selectCode.indexOf('S&#228;gen') != -1"); 
					assertTrue("HTML-Encoding der Werte: Radio", cat, "radioCode.indexOf('S&#228;gen') != -1");
					assertTrue("HTML-Encoding der Werte: Checkbox", cat, "checkboxCode.indexOf('S&#228;gen') != -1"); 
					break;
					
				case 2:
					assertEquals("Serverseitig decodierte Werte: Select", cat, tmlform.select, "Sägen"); 
					assertEquals("Serverseitig decodierte Werte: Radio", cat, tmlform.radio, "Sägen");
					assertEquals("Serverseitig decodierte Werte: Checkbox", cat, tmlform.checkbox, "Sägen"); 
					break;	
			
			
			}
			
					
		}
		catch (e) {
			logException(e);
			assertTrue("Exception running tests", cat, "false");
		}
	</tml:script>
	
	<tml:warnings/>
</body>
</html>