<html>

<head><tml:htmlhead/></head>

<body>
	<PRE>
	Tests if recovered URL params keep non-ASCII characters correctly
	</PRE>
	
	<hr>
	
	<tml:url keepparams="true" var="theurl"/>
	
	<tml:script>
		function findCookie(name) {
			for each (c in request.getCookies()) {
				if (c.name==name) return c.value;
			}
			return null;
		}
		var clickStep = parseInt(findCookie("clickStep"));
		var cat = findCookie("testId");
		
		try {
			assertEquals("URL parameter was set", cat, request.getParameter("päräm"), "välüe");
			
			var urlBuilder = WGA.urlBuilder(theurl);
			var paramNames = WGA.createList();
			paramNames.addAll(urlBuilder.getParameterNames());
			assertEqualLists("URL Parameter on tml:url name kept non-ASCII characters", cat, paramNames, ["päräm"]);
			assertEquals("URL Parameter on tml:url value kept non-ASCII characters", cat, urlBuilder.getParameter("päräm"), "välüe"); 
		}
		catch (e) {
			logException(e);
			assertTrue("Exception running tests", cat, "false");
		}
	</tml:script>
	
	<tml:warnings/>
</body>
</html>