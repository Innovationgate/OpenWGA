<tml:include medium="stylesheets" ref="cmm-styles"/>

<tml:include designdb="@afw" medium="jss" ref="toCSS" o_scope=".content-modules .content-box">
	"&.box > .title": {
		color: "white",
		background_color: "black",
		background_image: JSS.linearGradient("gray, gray 40%, black 60%"),
		padding: "4px 5px 5px 5px",
		margin: "0 !important",
		
		border_radius_: {
			"topleft,topright": 3
		},
		
		a: {
			display: "block",
			color: "inherit",
			text_decoration: "none",
			background: "url(<tml:url type="file" doc="images" file="arrow-right.png"/>) no-repeat right center"
		}
	},
	
	"> .content": {
	 	background_:{
	 		repeat: "no-repeat",
			size: "cover"
		}
	},
	
	"&.border > .content": {
		border: "solid silver 5px",
		border_radius: 5		
	},
	
	"&.color > .content": {
		background_color: "#efefef",
		border_radius: 5		
	}

</tml:include>
