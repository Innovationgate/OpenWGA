<tml:action id="saveScript">
	if(!tmlform.validate())
		return;
	var close_flag = tmlform.close_flag=="true";
	tmlform.removeField("close_flag");
	tmlform.storeInDocument(document);
	document.save();
	if(close_flag)
		_new_mode="view";
</tml:action>

<tml:if context="{'db:'+option('dbkey')+'/$cssjs:'+option('name')}" iscontextvalid="true">
	<tml:then>
		<tml:form id="script-form" cssclass="entryform" onsubmit="return false">
		
			<tml:include ref="::form"/>
			<tml:input type="hidden" name="close_flag"/>
			<tml:input name="code" meta="true" type="textarea" cssclass="textinput"/>
			
			<script>
				// submit function called from dialog handler and on RETURN
				BI.design.scriptpanel.submit=function(close){
					document.forms["script-form"].close_flag.value=close;
					WGA.ajax.callAction("<tml:action ref="saveScript"/>", 
						"<tml:script>return portlet.portletkey</tml:script>");
				}	
				BI.makeTextareasResizable("script-form");	
			</script>
		</tml:form>
		
	</tml:then>
	<tml:else>
		<tml:label key="design.error.invalidcontext"/>: <tml:option name="id"/>
	</tml:else>
</tml:if>
